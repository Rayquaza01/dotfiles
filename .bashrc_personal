alias cls="clear"
alias nightly="firefox-trunk"
alias t="tmux"
alias cped="copyedit.py"
alias yt-thumb="youtube-dl --extract-audio --audio-format mp3 --add-metadata --xattrs --embed-thumbnail"

# use 256 color
export TERM=screen-256color
# change path
export PATH="$HOME/.local/bin/:$PATH"

# open tmux (or attach old session on startup)
terminal=$(neofetch term)

if [[ $terminal == *"gnome"* ]]; then
    if [ -z "$TMUX" ]; then
        tmux attach || tmux new-session;
    fi
fi
# [ -z "$TMUX" && terminal != "term: vscode" ] && { tmux attach || tmux new-session; }
